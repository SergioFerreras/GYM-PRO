<AnchorPane minHeight="715.0" minWidth="100.0" prefHeight="161.0" prefWidth="415.0" styleClass="background-color" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gympro.Controller.UserLoginController">
   <children>
      <ImageView fitHeight="383.0" fitWidth="415.0" pickOnBounds="true">
         <image>
            <Image url="@../Elements/BackGrounds/FondoLogin.png" />
         </image>
      </ImageView>
      <Button layoutX="15.0" layoutY="29.0" mnemonicParsing="false" styleClass="loginSingupSelected" stylesheets="@../CSS/ButtonsStyle.css" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="10.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="signUpButton" layoutX="58.0" layoutY="31.0" mnemonicParsing="false" onAction="#irSingUp" styleClass="botonTransparente" stylesheets="@../CSS/ButtonsStyle.css" text="Sign up" textFill="WHITE">
         <font>
            <Font name="System Bold" size="10.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <TextField fx:id="usernameTextField" layoutX="77.0" layoutY="438.0" prefHeight="40.0" prefWidth="250.0" promptText="Username" stylesheets="@../CSS/style.css">
         <effect>
            <ColorAdjust brightness="-0.04" />
         </effect>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button fx:id="forgotPasswordButton" layoutX="234.0" layoutY="552.0" mnemonicParsing="false" styleClass="botonforgotPass" stylesheets="@../CSS/ButtonsStyle.css" text="Forgot Password" textFill="#82c345">
         <font>
            <Font name="Leelawadee UI Bold" size="11.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="loginButton" layoutX="157.0" layoutY="622.0" mnemonicParsing="false" onAction="#userlogin" prefHeight="40.0" prefWidth="101.0" styleClass="buttonColorVerde" stylesheets="@../CSS/ButtonsStyle.css" text="Login &gt;">
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label layoutX="36.0" layoutY="277.0" text="Welcome back," textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="46.0" />
         </font>
      </Label>
      <Label layoutX="35.0" layoutY="330.0" text="Athlete" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="60.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordTextField" layoutX="78.0" layoutY="510.0" prefHeight="26.0" prefWidth="250.0" promptText="Password" />
      <Button fx:id="crossButton" layoutX="385.0" layoutY="14.0" mnemonicParsing="false" onAction="#cerrarVentana" prefHeight="0.0" prefWidth="16.0" styleClass="crossButton" stylesheets="@../CSS/ButtonsStyle.css">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
